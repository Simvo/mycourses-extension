{
  "manifest_version": 2,

  "name": "MyCourses Extension",
  "description": "This extension helps users manage their myCourses assignments.",
  "version": "0.1.1",
  "browser_action": {
  },
  "options_ui":{
    "page": "options.html",
    "chrome_style":true,
    "open_in_tab":true
  },
  "permissions":[
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.mcgill.ca/*"],
      "js": [
        "js/calendarShortcut.js",
        "js/ouical.js", 
        "js/addToCalendar.js",
        "js/calendarDropdown.js",
        "js/calendarToggle.js",
        "js/init.js"
      ],
      "css": ["css/button.css"]
    }
  ]
}


